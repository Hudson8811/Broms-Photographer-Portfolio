extends layouts/default

block vars
	-
		const page = {
		title: 'index.html'
		};




block main
	.top-block
		img(src='./assets/images/circle-big.png' alt='')
		.blue-circle
		.top-block__bg
			img(src='assets/images/bg-portfolio.jpg' alt='')
		.container.top-block__container
			+title('Gallery')
			+breadcrumbs([{href: '#', text: 'Home'}, {href: '#', text: 'Gallery'}], 'top-block__breadcrumbs')
	.gallery
		img(src='./assets/images/circle/gallery.png' alt='')
		.blue-circle
		.gallery__block
			.gallery__part.gallery__part--25
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-1.jpg')
					img(src='assets/images/gallery/item-1.jpg' alt='')
			.gallery__part.gallery__part--25.gallery__part--small
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-2.jpg')
					img(src='assets/images/gallery/item-2.jpg' alt='')
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-3.jpg')
					img(src='assets/images/gallery/item-3.jpg' alt='')
			.gallery__part.gallery__part--50
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-4.jpg')
					img(src='assets/images/gallery/item-4.jpg' alt='')
		.gallery__block.gallery__block--reverse
			.gallery__part.gallery__part--25
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-8.jpg')
					img(src='assets/images/gallery/item-8.jpg' alt='')
			.gallery__part.gallery__part--25.gallery__part--small
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-6.jpg')
					img(src='assets/images/gallery/item-6.jpg' alt='')
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-7.jpg')
					img(src='assets/images/gallery/item-7.jpg' alt='')
			.gallery__part.gallery__part--50
				a.gallery__pic(data-fancybox='gallery1', href='assets/images/gallery/item-5.jpg')
					img(src='assets/images/gallery/item-5.jpg' alt='')
		+button('more photos', 'gallery__more')